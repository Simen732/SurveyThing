<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Surveys</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-poll me-2"></i>Survey App
            </a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4">
                    <i class="fas fa-list-alt me-2"></i>
                    Available Surveys
                </h1>

                <% if (surveys.length === 0) { %>
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-clipboard-list fa-5x text-muted mb-4"></i>
                            <h3 class="text-muted">No surveys available</h3>
                            <p class="text-muted">There are currently no active surveys to participate in.</p>
                            <a href="/" class="btn btn-outline-primary">
                                <i class="fas fa-home me-2"></i>Return Home
                            </a>
                        </div>
                    </div>
                <% } else { %>
                    <div class="row">
                        <% surveys.forEach(survey => { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 survey-card">
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">
                                            <i class="fas fa-clipboard-question me-2"></i>
                                            <%= survey.title %>
                                        </h5>
                                        <% if (survey.description) { %>
                                            <p class="card-text text-muted flex-grow-1">
                                                <%= survey.description %>
                                            </p>
                                        <% } %>
                                        <div class="mt-auto">
                                            <p class="card-text">
                                                <small class="text-muted">
                                                    <i class="fas fa-questions me-1"></i>
                                                    <%= survey.questions.length %> questions
                                                </small>
                                            </p>
                                            <a href="/survey/<%= survey._id %>" class="btn btn-primary">
                                                <i class="fas fa-play me-2"></i>
                                                Start Survey
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } %>

                <div class="mt-4">
                    <a href="/" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>